    <group ns="$(arg player_name)">
        <node name="teleop_rqt" pkg="rqt_robot_steering" type="rqt_robot_steering" output = "screen">
            <param name="default_topic" value="/$(arg player_name)/cmd_vel"/>
        </node>
    </group>  -->
</launch>